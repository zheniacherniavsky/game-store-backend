{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,    
    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true, 
    "strictPropertyInitialization": false,

    "noImplicitAny": true,
    "noImplicitReturns": true
  }
}
